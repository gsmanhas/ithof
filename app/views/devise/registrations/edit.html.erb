                      </div>
     </div>
  
   <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">First Name <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                         <%= f.text_field :first_name,:class => "form-control col-md-7 col-xs-12",:id => "inputSuccess4", :placeholder => "First Name" %><ul class="parsley-errors-list" id="parsley-id-0292"></ul>
                      </div>
