  <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Password  <i>(leave blank if you don't want to change it)</i>
                      </label>
					  <br />
					
                      <div class="col-md-6 col-sm-6 col-xs-12">
                         <%= f.password_field :password,:class => "form-control col-md-7 col-xs-12",:id => "inputSuccess7", :placeholder => "Password" %><ul class="parsley-errors-list" id="parsley-id-0292"></ul>
						 <% if @minimum_password_length %>
					  <br />
					  <em><%= @minimum_password_length %> characters minimum</em>
					<% end %>
                      </div>
    </div>
					  
 

  
  <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Password Confirmation <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                         <%= f.password_field :password_confirmation,:class => "form-control col-md-7 col-xs-12",:id => "inputSuccess8", :placeholder => "Password Confirmation" %><ul class="parsley-errors-list" id="parsley-id-0292"></ul>
                      </div>
    </div>
	
	
  
  
 

   <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Current Password  <span class="required">*</span>
